<?php if (!$this->getAgreements()) return; ?>

<div class="form-group">
<?php foreach ($this->getAgreements() as $_a): ?>
   
    <div class="modal fade" id="agreement-<?php echo $_a->getId()?>" tabindex="-1" role="dialog" aria-labelledby="<?php echo $_a->getIsHtml() ? $_a->getCheckboxText() : $this->escapeHtml($_a->getCheckboxText()) ?>">
        <div class="vertical-center-moip">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 >Termos e Condições: <?php echo $_a->getIsHtml() ? $_a->getCheckboxText() : $this->escapeHtml($_a->getCheckboxText()) ?></h2>
                    </div>
                    <div class="modal-body">
                         <?php if ($_a->getIsHtml()):?>
                            <?php echo $_a->getContent() ?>
                        <?php else:?>
                            <?php echo nl2br($this->escapeHtml($_a->getContent())) ?>
                        <?php endif; ?>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-dismiss="modal">Aceitar e fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="checkbox">
        <label class="checkbox-inline checkbox-review" for="agreement-<?php echo $_a->getId()?>">
                <input class="required-entry checkbox required-entry" type="checkbox" id="agreement-<?php echo $_a->getId()?>" name="agreement[<?php echo $_a->getId()?>]" value="1"  checked="checked" title="<?php echo $_a->getIsHtml() ? $_a->getCheckboxText() : $this->escapeHtml($_a->getCheckboxText()) ?>">
                <a href="#" title="<?php echo $this->escapeHtml($_a->getCheckboxText()) ?>" data-toggle="modal" data-target="#agreement-<?php echo $_a->getId()?>"  href="#"><?php echo $_a->getIsHtml() ? $_a->getCheckboxText() : $this->escapeHtml($_a->getCheckboxText()) ?></a>
        </label>
    </div>

<?php endforeach ?>
</div>
