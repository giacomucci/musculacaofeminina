                <use_pre_cadastro>1</use_pre_cadastro>
                <page_layout>4</page_layout>
                <style_cor>174D7D</style_cor>
                <style_cor_background>FAFAFA</style_cor_background>
                <style_cor_header>FFFFFF</style_cor_header>
                <style_cor>333333</style_cor>
                <progress_bar>5CB85C</progress_bar>
                <style_cor_header_text>333333</style_cor_header_text>
                <style_cor_footer>333333</style_cor_footer>
                <botao_cor_success>5CB85C</botao_cor_success>
