<?xml version="1.0" ?>
<config>

    <tabs>
        <andrewmarquesenviou translate="label" module="andrewmarquesenviou">
            <label><![CDATA[ <img src="https://enviou.com.br/assets/img/ico-enviou-magento.png" /> ]]></label>
            <sort_order>1</sort_order>
        </andrewmarquesenviou>
    </tabs>

    <sections>
        <andrewmarquesenviou module="andrewmarquesenviou">
            <tab>andrewmarquesenviou</tab>
            <label>Configurações</label>
            <frontend_type>text</frontend_type>
            <sort_order>2</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <configuracoes translate="label" module="andrewmarquesenviou">
                    <label>Configurações</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>
                        <![CDATA[
                        by <a href="http://andrewmarqs.com.br/" target="_blank">Andrew Marques</a>
                        ]]>
                    </comment>
                    <fields>
                        <nome_cliente translate="label" module="andrewmarquesenviou">
                            <label>Nome ou Empresa</label>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nome_cliente>
                        <email_cliente translate="label" module="andrewmarquesenviou">
                            <label>Email</label>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_cliente>
                        <telefone_cliente translate="label" module="andrewmarquesenviou">
                            <label>Telefone</label>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </telefone_cliente>
                        <logotipo translate="label" module="andrewmarquesenviou">
                            <label>Logotipo</label>
                            <frontend_type>image</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">enviou</upload_dir>
                            <base_url type="media" scope_info="1">enviou</base_url>
                        </logotipo>
                        <idioma translate="label" module="andrewmarquesenviou">
                            <label>Idioma</label>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>andrewmarquesenviou/system_config_source_idiomas</source_model>
                        </idioma>
                        <token translate="label" module="andrewmarquesenviou">
                            <label>Token</label>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <readonly>1</readonly>
                            <frontend_class>disabled</frontend_class>
                            <frontend_model>AndrewMarques_Enviou_Block_Disabled</frontend_model>
                            <comment>Gerado automaticamente, não altere!</comment>
                        </token>
                        <codigo_js translate="label" module="andrewmarquesenviou">
                            <label>Código JS</label>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <readonly>1</readonly>
                            <frontend_class>disabled</frontend_class>
                            <frontend_model>AndrewMarques_Enviou_Block_Disabled</frontend_model>
                            <comment>Gerado automaticamente, não altere!</comment>
                        </codigo_js>
                    </fields>
                </configuracoes>
                <install translate="label" module="andrewmarquesenviou" ifconfig="andrewmarquesenviou/configuracoes/nome_cliente">
                    <label>Instalar</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>4</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <install translate="label" module="andrewmarquesenviou">
                            <label>Instalar loja</label>
                            <sort_order>2</sort_order>
                            <frontend_type>button</frontend_type>
                            <comment><![CDATA[ Salve as <b>configurações</b> antes. ]]></comment>
                            <frontend_model>AndrewMarques_Enviou_Block_Button</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </install>
                    </fields>
                </install>
            </groups>
        </andrewmarquesenviou>
    </sections>
</config>
